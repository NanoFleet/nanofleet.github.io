---
/**
 * PageLayout
 * Layout wrapper for standard content pages (non-landing)
 * Uses Header + Footer for consistent navigation
 * Used when demo content is not included
 */
import BaseLayout from './BaseLayout.astro';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  imageAlt?: string;
  noindex?: boolean;
  nofollow?: boolean;
}

const { title, description, image, imageAlt, noindex, nofollow } = Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  image={image}
  imageAlt={imageAlt}
  noindex={noindex}
  nofollow={nofollow}
>
  <Header
    slot="header"
    actions={[
      {
        icon: 'github',
        href: 'https://github.com/NanoFleet/nanofleet',
        label: 'GitHub',
        iconOnly: true,
        target: '_blank',
      },
    ]}
  />

  <main class="min-h-screen pt-16">
    <slot />
  </main>

  <Footer
    slot="footer"
    layout="simple"
    nav={[
      { label: 'Blog', href: '/blog' },
      { label: 'GitHub', href: 'https://github.com/NanoFleet/nanofleet', external: true },
    ]}
    showSocial={false}
    copyright="Â© {year} NanoFleet. Open source."
  >
    <a slot="logo" href="/" class="flex items-center gap-2">
      <span class="text-sm font-semibold text-foreground">NanoFleet</span>
    </a>
  </Footer>
</BaseLayout>
